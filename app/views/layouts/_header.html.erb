<header class="bg-warning sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <h1><%= link_to "Travel Sharing", root_path, class: "title navbar-brand p-3" %></h1>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'ホーム', posts_path, class: 'fas fa-home nav-link' %>
            </li>
            <li>
              <%= link_to "マイページ", user_path(current_user.id), class: "fas fa-user nav-link" %>
            </li>
            <li>
              <%= link_to "設定", edit_user_registration_path, class: "fas fa-cog nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link" %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class: "fas fa-user-plus nav-link" %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class: "fas fa-sign-in-alt nav-link" %>
            </li>
            <li>
              <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "fas fa-sign-in-alt nav-link" %>
            </li>
          <% end %>
        </ul>
      </div
    </div>
  </nav>
</header>