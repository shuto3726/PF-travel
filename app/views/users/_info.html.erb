<h3 class="profile-name"><%= @user.name %></h3>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<p>フォロー<%= link_to @user.followings.count, user_followings_path(@user) %></p>
<p>フォローワー<%= link_to @user.followers.count, user_followers_path(@user) %></p>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% else %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
<% end %>
<p><%= link_to "お気に入り一覧", favorites_user_path(@user.id) %></p>

<p><%= button_to '新規投稿', {controller: "posts", action: "new"}, {method: :get} %></p>