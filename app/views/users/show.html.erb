
  <div class="row">
    <div class="col-3">
      <h3 class="profile-name"><%= @user.name %></h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <p>follows<%= link_to @user.followings.count, user_followings_path(@user) %></p>
      <p>followers<%= link_to @user.followers.count, user_followers_path(@user) %></p>
      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <p><%= link_to "退会する", user_path(current_user.id), method: :delete %></p>
      <% else %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      <% end %>
    </div>
    <div class="col-6">
      <% @posts.each do |post| %>
        <div class="card" style="max-width: 540px">
          <div calss="row no-gutters">
            <div class="col-6">
              <%= attachment_image_tag post, :image, :fill, 100, 100 %>
            </div>
            <div class="col-6">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to post_path(post.id) do %>
                    <%= post.place%>
                  <% end %>
                </h5>
                <p><%= post.description %></p>
                <p>住所:<%= post.address %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
        
    <div class="col-3">a</div>
  </div>


<%= paginate @posts %>