<p>レビューを書く</p>

<div class="rating-box">
  <%= form_with model: review, url: post_reviews_path(post), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings">
        <span class ="fa fa-star-o" id="star"></span>
        <span class ="fa fa-star-o" id="star"></span>
        <span class ="fa fa-star-o" id="star"></span>
        <span class ="fa fa-star-o" id="star"></span>
        <span class ="fa fa-star-o" id="star"></span>
      </div>
      <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "保存", class: "button" %>
    <%= link_to "他のレビューを見る", post_reviews_path(post), class: "button" %>
  <% end %>
</div>

<%= javascript_include_tag "/assets/review.js" %>