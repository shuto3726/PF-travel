<div class="row">
    <div class="col-2 d-flex justify-content-center left-column">
      <div class="sticky-top sticky-side">
        <%= render"users/info", users: @users %>
      </div>
    </div>
    <div class="main-column col-8">
      <h3>"<%= @content %>" の検索結果</h3>
      <% @records.each do |post| %>
        <div class="card w-100 mx-auto mt-2 ">
          <%= render "posts/card_content", post: post %>
          <div class="row">
            <%= render "posts/card_action", post: post %>
          </div>
        </div>
      <% end %>
      <%= paginate @records %>
    </div>

    <div class="col-2 right-column">
      <%= render "posts/prefectures", posts: @posts %>
    </div>
  </div>
<%= render "posts/evaluation", posts: @posts %>