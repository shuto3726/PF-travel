<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorite_path(post, post.favorites.find_by(user_id: current_user.id)), class: "favorite-btn action w-100 text-center", method: :delete, remote: true do %>
    <div class="fas fa-heart text-danger"><%= post.favorites.count %></div>
    <div>お気に入り</div>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), class: "favorite-btn action w-100 text-center", method: :post, remote: true do %>
    <div class="far fa-heart"><%= post.favorites.count %></div>
    <div>お気に入り</div>
  <% end %>
<% end %>