<div class="container">
  <div class="row">
    <div class="col-10  mx-2 mx-sm-auto mt-3">
      <h2 class="mx-auto w-75 ">ログイン</h2>
      <div class="card mx-auto w-75 text-center">
        <%= form_with model: @user,url:user_session_path, local: true do |f| %>
          <div class="form-group mt-4">
            <%= f.label :メールアドレス, class: "mb-0" %><br />
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "w-75" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: "mb-0" %><br />
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "w-75" %>
          </div>
          <div class="form-group px-4">
            <%= f.submit "ログイン", class: "btn btn-outline-secondary btn-lg w-50 rounded-pill" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
