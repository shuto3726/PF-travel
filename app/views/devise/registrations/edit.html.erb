<div class="container">
  <div class="row">
    <div class="col-10  mx-2 mx-sm-auto mt-3 mb-5">
      <h2 class="mx-auto w-75 ">設定</h2>
      <div class="card mx-auto w-75">
        <h6 class="m-3">メールアドレス変更</h6>
        <%= form_for(resource, as: resource_name, url: user_path(current_user.id), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group text-center mb-5">
            <%= f.label :新しいメールアドレス, class: "mb-0" %><br />
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "w-75" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <h7 class="m-3">パスワード変更</h7>
          <div class="form-group text-center">
            <%= f.label :現在のパスワード, class: "mb-0" %><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-75" %>
          </div>
          <div class="form-group text-center">
            <%= f.label :新しいパスワード, class: "mb-0" %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "w-75" %>
          </div>
          <div class="form-group text-center">
            <%= f.label :パスワード確認, class: "mb-0" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-75" %>
          </div>
          <div class="form-group text-center px-4">
            <%= f.submit "変更", class: "btn btn-outline-secondary btn-lg w-50 rounded-pill" %>
          </div>
        <% end %>
      </div>
      <div class="card mx-auto w-75 mt-3">
        <h7 class="m-3">退会</h7>
        <div class="text-center mb-3">
          <%= button_to "退会", registration_path(resource_name), data: { confirm: "本当に退会しますか？" }, class: "btn btn-outline-danger btn-lg w-50 rounded-pill" , method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
