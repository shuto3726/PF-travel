<div class="container">
  <div class="row">
    <div class="col-10 mx-2 mx-sm-auto mt-3">
      <h2 class="mx-auto w-75">新規登録</h2>
      <div class="card mx-auto w-75 text-center">
        <%= form_with model:@user, url: user_registration_path, id:'new_user', class:'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group mt-4">
            <%= f.label :ニックネーム, class: "mb-0" %><br />
            <%= f.text_field :name, required: true, autofocus: true, class: "w-75" %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス, class: "mb-0" %><br />
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "w-75" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード（６文字以上）, class: "mb-0" %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, required: true, autocomplete: "new-password", class: "w-75" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード（確認）, class: "mb-0" %><br />
            <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-75" %>
          </div>
          <div class="form-group px-4">
            <%= f.submit "新規登録", class: "btn btn-outline-secondary btn-lg w-50 rounded-pill" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
